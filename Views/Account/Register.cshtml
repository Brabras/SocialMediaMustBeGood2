@{
}
@model SocialMediaMustBeGood2.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="LogIn"></label><br />
        <input asp-for="LogIn" />
        <span asp-validation-for="LogIn"></span>
    </div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <label asp-for="Avatar"></label><br />
        <input asp-for="Avatar" />
        <span asp-validation-for="Avatar"></span>
    </div>
    <div>
        <label asp-for="UserInfo"></label><br />
        <textarea asp-for="UserInfo"></textarea>
        <span asp-validation-for="UserInfo"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="Sex"></label><br />
        <select class="form-select" asp-for="Sex">
            <option value="M" selected>M</option>
            <option value="F" >F</option>
        </select>
        <span asp-validation-for="Sex"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }